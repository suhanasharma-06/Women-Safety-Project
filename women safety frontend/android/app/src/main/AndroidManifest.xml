<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ✅ INTERNET for API calls and map requests -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ✅ SMS Permissions for offline SOS -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- ✅ Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- ✅ Optional — For vibration and alerts -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- ✅ For network and offline caching -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- ✅ For map tile caching (if offline maps are added later) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- ✅ Required for fetching nearby police, hospitals, etc. -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:name="${applicationName}"
        android:label="Women Safety App"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true">

        <!-- ✅ Required Flutter embedding -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- ✅ Compatibility for SMS & HTTP -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- ✅ Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCt8jw_uRbRfr9_8CBRdauiHY8rWCjV6WU" />

        <!-- ✅ Optional: For background live location tracking -->
        <service
            android:name="com.example.women_safety_app.services.LocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- ✅ Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- ✅ Flutter splash screen -->
            <meta-data
                android:name="io.flutter.embedding.android.SplashScreenDrawable"
                android:resource="@drawable/launch_background" />

            <!-- ✅ Entry point -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- ✅ Deep link for internal navigation to Safe Zone -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="safetrack" android:host="safezone" />
            </intent-filter>

        </activity>

        <!-- ✅ Required for Google Play services (maps, location, etc.) -->
        <meta-data
            android:name="flutter.sharing.use-google-play-services"
            android:value="true" />

    </application>
</manifest>
